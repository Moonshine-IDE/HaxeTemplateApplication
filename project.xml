<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- project.xml reference: https://lime.software/docs/project-files/xml-format/ -->
	<meta title="HaxeTemplateApplication" package="com.example.HaxeTemplateApplication" version="1.0.0" company="STARTcloud" />
	<app main="HaxeTemplateApplication" path="bin" file="HaxeTemplateApplication"/>

	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="feathersui" />
	<haxelib name="amfio"/>
	<haxelib name="champaign"/>

	<source path="src" />

	<!--templates-->
	<template path="templates" />

	<assets path="src/base/themes/assets" rename="theme/images" />

	<haxeflag name="--macro" value="include('feathers')"/>

	<haxeflag name="--resource" value="templates/resources/REPORTFORMA.template@REPORTFORMA" />

	<haxedef name="HXCPP_STACK_LINE" />
	<haxedef name="HXCPP_STACK_TRACE"/>
	<haxedef name="HXCPP_CHECK_POINTER"/>
</project>